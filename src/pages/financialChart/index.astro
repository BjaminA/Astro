---
import BaseLayout from '../../layouts/BaseLayout.astro';
---
<BaseLayout title="Financial Chart - Your App">
  <!-- Load Chart.js -->
  <script
    slot="head"
    defer
    src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/3.5.1/chart.min.js"
  ></script>

  <!-- Load date-fns (version 2.x) -->
  <script
    slot="head"
    defer
    src="https://cdnjs.cloudflare.com/ajax/libs/date-fns/2.29.3/date-fns.min.js"
  ></script>

  <!-- Load Chart.js date adapter compatible with date-fns v2.x -->
  <script
    slot="head"
    defer
    src="https://cdn.jsdelivr.net/npm/chartjs-adapter-date-fns@2.0.0/dist/chartjs-adapter-date-fns.bundle.min.js"
  ></script>

  <!-- Include your plotChart.js script -->
  <script
    slot="head"
    defer
    src="/js/plotChart.js"
  ></script>

  <!-- Main Content -->
  <div class="bg-white dark:bg-gray-800 rounded-lg shadow-lg p-6">
    <h2 class="text-2xl font-bold mb-4 text-center">Financial Overview</h2>
    
    <!-- Responsive Chart Container -->
    <div class="w-full h-96">
      <canvas id="financialChart"></canvas>
    </div>
    
    <div class="flex justify-center mt-6">
      <button
        type="button"
        class="text-white bg-blue-700 dark:bg-blue-600 hover:bg-blue-800 dark:hover:bg-blue-700 focus:ring-4 focus:ring-blue-300 dark:focus:ring-blue-800 font-medium rounded-lg text-sm px-5 py-2.5 mr-2 mb-2 focus:outline-none transition duration-300 ease-in-out transform hover:-translate-y-1 hover:scale-105"
      >
        Reload Data
      </button>
    </div>
  </div>
</BaseLayout>
